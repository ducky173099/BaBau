<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:paddingLeft="10dp"
        android:background="@drawable/custom_btnfff"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgthree"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/three"/>
        </RelativeLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <TextView
                android:textSize="17sp"
                android:textColor="#242323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:35 - 10/12/19"
                android:id="@+id/txtTimeweight"/>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtCountweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="#1AAF6B"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/delweight"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_substract"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>