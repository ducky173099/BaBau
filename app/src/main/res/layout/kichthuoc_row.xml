<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:background="@drawable/custom_btnfff"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgSeedbaby"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sesame"/>
        </RelativeLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuần 3-4"
                android:id="@+id/txtWeekbaby"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#BA757885"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạt mè"
                android:id="@+id/txtseedbaby"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#BA757885"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 mm - 0.1 g(đo từ đầu đến mông)"
                android:id="@+id/txtsizebaby"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>