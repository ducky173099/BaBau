<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F0152A49"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtnamedialog"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"
        android:textColor="#0CA5E2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn một hoạt động"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#0998B1"/>
    <LinearLayout
        android:id="@+id/comunityFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <ImageView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/facebook"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:textColor="#fff"
                android:textSize="22sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Facebook"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#066F81"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/comunityTD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <ImageView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/browser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:textColor="#fff"
                android:textSize="22sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Trình duyệt"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#066F81"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnComuAlwayl"
                android:background="@null"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#DA858282"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Luôn luôn"/>
            <Button
                android:id="@+id/btnComuOne"
                android:background="@null"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#DA858282"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chỉ một lần"/>
        </LinearLayout>
        <View
            android:layout_centerHorizontal="true"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#066F81"/>
    </RelativeLayout>

</LinearLayout>