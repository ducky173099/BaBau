<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgsieuam"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/ic_plus"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="4"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:background="@drawable/borderliftred"
                    android:padding="10dp"
                    android:id="@+id/txt2d"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:text="2D"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@drawable/borderred"
                    android:padding="10dp"
                    android:id="@+id/txt3d"
                    android:gravity="center"
                    android:textColor="#26990A"
                    android:textSize="12sp"
                    android:text="3D"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@drawable/borderred"
                    android:padding="10dp"
                    android:id="@+id/txtmau"
                    android:gravity="center"
                    android:textColor="#26990A"
                    android:textSize="12sp"
                    android:text="Mau"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@drawable/borderright"
                    android:padding="10dp"
                    android:id="@+id/txtvideo"
                    android:gravity="center"
                    android:textColor="#26990A"
                    android:textSize="12sp"
                    android:text="Video"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_icbaby"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_next"/>
                <TextView
                    android:id="@+id/txtDescbaby"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Em be"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtcontentbaby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Lorem Ipsum is simply dummy text of the printing"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_icmom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_next"/>
                <TextView
                    android:id="@+id/txtDescmom"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nguoi me"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtcontentmom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_iclk"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_next"/>
                <TextView
                    android:id="@+id/txtDesclk"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loi khuyen"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtcontentlk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Lorem Ipsum is simply dummy text of the printing"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>