<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:background="@drawable/custom_btnfff"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imghoatdong"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sesame"/>
        </RelativeLayout>
        <LinearLayout
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tắm nắng"
                android:id="@+id/txtDesc"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#BA757885"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rất tốt"
                android:id="@+id/txtVal"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#BA757885"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tắm nắng đúng cách trong thai kì tốt cho cả mẹ lẫn con"
                android:id="@+id/txtContent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>